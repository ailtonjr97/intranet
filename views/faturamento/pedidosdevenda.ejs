<%- include('../partials/sidebar') %>
<link rel="stylesheet" href="/css/table.css" />
<link rel="stylesheet" href="/css/button8.css" />
<link rel="stylesheet" href="/css/loading.css" />


<div id="loading"></div>


    <div class="row mt-2">
      <div class="col-md-4">
        <h4>Pedidos de Venda</h4>
      </div>
      <div class="col-lg-4">
      </div>
      <div class="col-md-4">
        <button type="button" class="button-8 mb-2" id="result" style="float: right;">
          <span class="counter-value"><%=results%></span>
          resultados
        </button>
        <%if (user.admin == 1){%>
        <a href="/faturamento/atualizarSC5">
          <button type="button" class="button-8" id="result" style="float: right; margin-right: 3%;">Atualizar tabela</button>
        </a>
        <%}%>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col">
        <div class="form-floating">
          <input type="text" class="form-control" id="procura0"/>
          <label for="procuraBtn0">Número do pedido:</label>
        </div>
      </div>
      <div class="col">
        <div class="form-floating">
          <input type="text" class="form-control" id="procura1"/>
          <label for="procuraBtn1">Cliente:</label>
        </div>
      </div>
      <div class="col">
        <div class="form-floating">
          <input type="text" class="form-control" id="procura2"/>
          <label for="procuraBtn2">Filial:</label>
        </div>
      </div>
    </div>
    <div class="table-wrapper table-responsive table-striped mb-4">
      <table class="fl-table" id="myTable">
        <thead>
          <tr style="height: 25px">
            <th>Número do pedido</th>
            <th>Cliente</th>
            <th>Filial</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <%contents.forEach ((content)=>{%>
          <tr>
            <td>
                <p><%=content.num%></p>
            </td>
            <td>
              <p><%=content.cliente%></p>
            </td>
            <td>
              <p><%=content.filial%></p>
            </td>
            <td>
              <a href="/faturamento/pedidosdevenda/detalhes/<%=content.num%>/<%=content.filial%>">
                <button type="button" class="button-8">Detalhes</button>
              </a>
            </td>
          </tr>
          <%})%>
        </tbody>
        <tbody></tbody>
      </table>
    </div>

<script>
  const searchParams = new URLSearchParams(window.location.search);

  document.getElementById("procura0").value = searchParams.get('NUM');
  document.getElementById("procura1").value = searchParams.get('CLIENTE');
  document.getElementById("procura2").value = searchParams.get('FILIAL');

  document.getElementById("procura0").addEventListener("keypress", function(event) {
      if (event.key === "Enter") {
          window.location = `/faturamento/pedidosdevenda?NUM=${document.getElementById("procura0").value}&CLIENTE=${document.getElementById("procura1").value}&FILIAL=${document.getElementById("procura2").value}`
      }
  });

  document.getElementById("procura1").addEventListener("keypress", function(event) {
      if (event.key === "Enter") {
          window.location = `/faturamento/pedidosdevenda?NUM=${document.getElementById("procura0").value}&CLIENTE=${document.getElementById("procura1").value}&FILIAL=${document.getElementById("procura2").value}`
      }
  });

  document.getElementById("procura2").addEventListener("keypress", function(event) {
      if (event.key === "Enter") {
          window.location = `/faturamento/pedidosdevenda?NUM=${document.getElementById("procura0").value}&CLIENTE=${document.getElementById("procura1").value}&FILIAL=${document.getElementById("procura2").value}`
      }
  });
</script>


<script type="text/javascript" src="/js/carregador.js"></script>
<script type="text/javascript" src="/js/confirmation.js"></script>
<script type="text/javascript" src="/js/procura.js"></script>