    <form action="/login/autenticar" method="POST">
      <img src="images/LOGO-FIBRACEM-5.webp" alt=""/ style="text-align: center; width: 100%;">

        <label style="color: #ffffff" for="username">Usuário</label>
        <input type="text" placeholder="E-mail" id="username" name="username">

        <label style="color: #ffffff" for="password">Senha</label>
        <input type="password" placeholder="Senha" id="password" name="password">

        <div class="row">
          <div class="col">
            <p style="text-align: center; margin-top: 5%;">Erro ao autenticar usuário ou sessão expirada.</p>
          </div>
        </div>
        <div class="row">
          <div class="col d-flex justify-content-between">
            <a style="margin-left: 20%; color: #0e51ce;" href="http://192.168.0.85/login">Fazer login pelo Intranet.</a>
          </div>
        </div>
        <button type="submit">Entrar</button>
    </form>
</body>
<script>
  let params = new URLSearchParams(document.location.search);
  if(!params.get("invalido")){
    document.getElementsByClassName('row')[0].style.display = 'none'
  }
</script>
