<%- include('../partials/sidebar') %>


<link rel="stylesheet" href="/css/table.css" />
<link rel="stylesheet" href="/css/button8.css" />
<link rel="stylesheet" href="/css/loading.css" />
<link rel="stylesheet" href="/css/contador.css" />

<style>
    .form-floating{
        margin-left: 1%;
    }
</style>

<html>
    <body>
        <main>
            <form action="/usuarios/mudarsenha/<%=user.id%>" method="post">
                <div class="row mt-4">
                    <div class="col d-flex justify-content-start">
                        <div class="form-floating mb-3" style="width: 8%;">
                            <input type="number" class="form-control" id="id" placeholder="<%=user.id%>" value="<%=user.id%>" readonly>
                            <label for="id">ID:</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="nome" placeholder="Name:" value="<%=user.name%>" readonly>
                            <label for="nome">Nome:</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-floating mb-3" >
                            <input type="password" class="form-control" id="password" style="width: 50%" name="password">
                            <label for="password">Senha:</label>
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-left: 0.2%">
                    <div class="col d-flex justify-content-start">
                        <input type="checkbox" onclick="myFunction()"><span style="margin-left: 0.3%;">Mostrar Senha</span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col d-flex justify-content-center">
                        <button type="submit" id='botaoSalva' class="button-8" style="width: 120px;">Salvar</button>
                    </div>
                </div>
            </form>
        </main>
    </body>
    <script>
        function myFunction() {
            var x = document.getElementById("password");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
    </script>
</html>

<script type="text/javascript" src="/js/carregador.js"></script>
<script type="text/javascript" src="/js/confirmation.js"></script>
<script type="text/javascript" src="/js/procura.js"></script>
<script type="text/javascript" src="/js/contador.js"></script>